<div class="row border-between container">
  <div class="col-xs-4">
    <h3>List of Stores</h3>
    <% if @stores.any?() %>
    <ul class="list-group">
      <% @stores.each() do |store| %>
        <li class="list-group-item"><a href="stores/<%= store.id() %>"><%= store.name() %></a>
          <form class="" action="stores/<%= store.id() %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="delete glyphicon glyphicon-remove pull-right"></button>
          </form>
        </li>
        <% end %>
    </ul>
    <% else %>
      <h4>No Stores have been added yet</h4>
    <% end %>
  </div>
  <div class="col-xs-4">
    <h3>List of Brands</h3>
    <% if @brands.any?() %>
    <ul class="list-group">
      <% @brands.each() do |brand| %>
        <li class="list-group-item"><a href="brands/<%= brand.id() %>"><%= brand.name() %></a>
          <form class="" action="brands/<%= brand.id() %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="delete glyphicon glyphicon-remove pull-right"></button>
          </form>
        </li>
        <% end %>
    </ul>
    <% else %>
      <h4>No Brands have been added yet</h4>
    <% end %>
  </div>
  <div class="col-xs-4">
    <form class="well" action="/stores/new" method="post">
      <div class="form-group">
        <label for="new_store">Enter Store Name</label>
        <input type="text" name="new_store" class="form-control">
      </div>
      <button type="submit" class="btn btn-sm btn-success">Add Store</button>
    </form>
    <form class="well" action="/brands/new" method="post">
      <div class="form-group">
        <label for="new_brand">Enter Brand Name</label>
        <input type="text" name="new_brand" class="form-control">
      </div>
      <button type="submit" class="btn btn-sm btn-success">Add Brand</button>
    </form>
  </div>
</div>
